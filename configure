#!/usr/bin/env bash

# A hach to restart the script with Bash
if [ -z "$BASH" ]; then exec bash "$0" "$@"; fi

set -eu
set -o pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -L | sed 's://:/:g')"

generate_buildinfo() {
  #   cat <<-EOF
  # extra-lib-dirs:
  #     ${SCRIPT_DIR}/cbits
  # ghc-options:
  #     -optl-Wl,-L${SCRIPT_DIR}/cbits -optl-Wl,-lhalide_runtime
  # extra-libraries:
  #     halide_runtime
  #     pthread
  #     dl
  # EOF
  cat <<-EOF
include-dirs:
    ${SCRIPT_DIR}/third_party/Halide/include
ld-options:
    ${SCRIPT_DIR}/cbits/libhalide_runtime.o
extra-libraries:
    pthread
    dl
EOF
}

main() {
  pushd "$SCRIPT_DIR"
  make
  pushd "app"
  make
  popd
  popd
  generate_buildinfo >"halide-haskell.buildinfo"
}

main "$@"
